<div class="ac2d20-chat-message">
	<div class="content">
		<h2>
			{{rollName}}
		</h2>
		<div class="damage-plaq flexrow">
			<p class="flex-2" style="margin: 0;">
				{{localize "AC2D20.UI.Damage"}}:
				{{damage}}
				|
				{{localize "AC2D20.TEMPLATES.Effects"}}:
				{{effects}}
			</p>
		</div>
		{{#if item}}
			<p class="font-size-11">
				{{#ifCond item.type "===" "spell"}}
					{{localize "AC2D20.TEMPLATES.Effects"}}: {{itemEffects}}
				{{else}}
					{{localize "AC2D20.TEMPLATES.Effects"}}: {{{listDamageEffects item.system.effect}}}
				{{/ifCond}}
			</p>
		{{/if}}
		<div class="dices-result" style="display: flex; flex-wrap: wrap;">
			{{#each results as |dice|}}
				<span class="dice-icon d6 face-{{dice.face}}{{#if reroll}} reroll{{/if}}{{#ifCond effect '==' 1}} effect{{/ifCond}}" data-index="{{@index}}">&nbsp;</span>
			{{/each}}
		</div>
		<div class="flexrow">
			<button class="reroll-button">
				{{localize "AC2D20.TEMPLATES.Re_roll"}}
			</button>
			<button class="add-button">
				{{localize "AC2D20.UI.Add"}}
			</button>
		</div>
	</div>
</div>
